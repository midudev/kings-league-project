---
import Logo from './Logo.astro'

const menu = [
	{
		name: 'Equipos',
		href: '/equipos'
	},
	{
		name: 'Calendario',
		href: '/calendario'
	},
	{
		name: 'Estad√≠sticas',
		href: '/estadisticas'
	},
	{
		name: 'Contacto',
		href: '/contacto'
	},
	{
		name: 'Reglamento',
		href: '/reglamento'
	}
]

Astro.url.pathname

const response = await fetch('https://kings-league-api.midudev.workers.dev/teams')
const teams = await response.json()
---

<header
	class='flex items-center w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#e66000] p-8 gap-x-8'
>
	<div class='flex flex-col h-full gap-4 w-full'>
		<nav>
			<ul class='flex items-center justify-center rounded-xl gap-x-4 [&>li>a:hover]:scale-150 w-full'>
				{
					teams.map(({ id, image, name }, index) => (
						<>
							{index === 6 ? <Logo /> : ''}
							<li>
								<a class='group transition block' href={`/team/${id}`} title={name}>
									<img
										class='group-hover:drop-shadow-[0px_0px_8px_#fff] drop-shadow-[0px_0px_4px_#fff] h-12 w-12'
										src={image}
										alt={`Escudo del equipo ${name}`}
									/>
								</a>
							</li>
						</>
					))
				}
			</ul>
		</nav>

		<nav>
			<ul
				class='flex justify-center text-white gap-x-4 font-semibold text-md [&>li>a]:opacity-80 [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline'
			>
				{
					menu.map(({ name, href }) => (
						<li>
							<a
								class={`transition ${Astro.url.pathname === href ? 'opacity-100 underline pointer-events-none' : ''}`}
								href={href}
							>
								{name}
							</a>
						</li>
					))
				}
			</ul>
		</nav>
	</div>
</header>
