---
import CardBackgroundTeam from './CardBackgroundTeam.astro'

	const { playerName, smallerBox, playerImage, teamId, teamImage, teamName, title, subtitle } = Astro.props
	const gradient = `bg-${teamId}`

	const whiteImage = teamImage?.replace('.svg', '-inverse.svg')
---

<article class={`relative ${gradient} rounded p-5`}>
	<div class="flex flex-col justify-between gap-y-10">
		<header>
			<h4 class="text-white font-title font-black text-[80px] leading-none">{title}</h4>
			<h5 class="uppercase text-orange-500 font-black font-title text-3xl">{subtitle}</h5>
		</header>

		<footer>
			<strong class="text-white font-bold text-xl">{playerName}</strong>
			<p class="text-white opacity-80">{teamName}</p>
		</footer>
	</div>
	<CardBackgroundTeam image={whiteImage} />

	<img class={`absolute -right-2 bottom-0 ${smallerBox ? 'w-52' : 'w-60'}`} src={`https://kingsleague.dev/teams/players/${playerImage}`} />
</article>
