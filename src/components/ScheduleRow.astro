---
const { local, score, visitant } = Astro.props
---

<tr class='group border-y [&>td]:py-2 transition hover:bg-black'>
	<td class='text-right transition group-hover:text-white'>
		<span class='md:hidden'>{local.shortName}</span>
		<span class='hidden md:block'>{local.name}</span>
	</td>
	<td class='w-24'>
		<img
			class='h-8 object-contain mx-auto'
			src={`https://api.kingsleague.dev/static/logos/${local.id}.svg`}
			alt={`Escudo del equipo ${local.name}`}
		/>
	</td>
	<td class='w-24 md:w-48'>
		<p
			class='text-center text-xs font-bold bg-gray-200 rounded-sm p-2 transition group-hover:bg-gray-50'
		>
			{score !== '0 â€“ 0' ? score : 'vs'}
		</p>
	</td>
	<td class='w-24'>
		<img
			class='h-8 object-contain mx-auto'
			src={`https://api.kingsleague.dev/static/logos/${visitant.id}.svg`}
			alt={`Escudo del equipo ${visitant.name}`}
		/>
	</td>
	<td class='text-left transition group-hover:text-white'>
		<span class='md:hidden'>{visitant.shortName}</span>
		<span class='hidden md:block'>{visitant.name}</span>
	</td>
</tr>
