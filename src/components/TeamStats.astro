---
import { findLeaderboardBy } from '@services/leaderboard.js'

const { teamId } = Astro.props

const { rank, wins, losses, scoredGoals, concededGoals, yellowCards, redCards } =
	await findLeaderboardBy({ teamId })

const stats = [
	{
		title: 'Clasificaci√≥n',
		value: rank
	},
	{
		title: 'Victorias',
		value: wins
	},
	{
		title: 'Derrotas',
		value: losses
	},
	{
		title: 'Goles a favor',
		value: scoredGoals
	},
	{
		title: 'Goles en contra',
		value: concededGoals
	},
	{
		title: 'Tarjetas Amarillas',
		value: yellowCards
	},
	{
		title: 'Tarjetas Rojas',
		value: redCards
	}
]
---

<section class='bg-black p-4 rounded-lg'>
	{
		stats.map((stat) => (
			<div class='flex justify-between items-center mb-2'>
				<h4 class='text-yellow-400 uppercase font-bold font-title'>{stat.title}</h4>
				<strong class='text-4xl font-title text-white font-bold'>{stat.value}</strong>
			</div>
		))
	}
</section>
