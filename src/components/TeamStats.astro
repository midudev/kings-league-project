---
import { findLeaderboardBy } from '@services/leaderboard.js'

const { teamId } = Astro.props

const { rank, wins, losses, scoredGoals, concededGoals, yellowCards, redCards } =
	await findLeaderboardBy({ teamId })

const stats = [
	{
		title: 'Clasificaci√≥n',
		value: rank
	},
	{
		title: 'Victorias',
		value: wins
	},
	{
		title: 'Derrotas',
		value: losses
	},
	{
		title: 'GF',
		value: scoredGoals
	},
	{
		title: 'GC',
		value: concededGoals
	},
	{
		title: 'T. Amarillas',
		value: yellowCards
	},
	{
		title: 'T. Rojas',
		value: redCards
	}
]
---

<div class="flex">
	<section
	  class='p-4 rounded-lg mt-5 grid grid-cols-3 gap-2 bg-gradient-to-tr from-[#202020c9] via-[#36363685] to-[#cd55002a] shadow-xl'
  >
		{
			stats.map((stat) => (
				<div class='flex flex-col justify-between items-start'>
					<h4 class='text-yellow-400 uppercase font-bold font-title'>{stat.title}</h4>
					<strong class='text-4xl font-title text-white font-bold'>{stat.value}</strong>
				</div>
			))
		}
	</section>
</div>
