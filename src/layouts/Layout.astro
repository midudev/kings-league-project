---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

const {
	title,
	description = 'Bienvenido a la Kings League, una nueva forma de entender el fútbol'
} = Astro.props

const seoTitle = title
	? `${title} | Kings League Infojobs`
	: 'Kings League Infojobs | Fútbol real';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{seoTitle}</title>
		<meta name="description" content={description} />
	</head>
	<body class="min-h-screen bg-orange-50/80 overflow-x-hidden">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	@font-face {
		font-family: 'Archivo';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('/fonts/archivo.woff2') format('woff2');
	}

	@font-face {
		font-family: 'Archivo';
		font-style: normal;
		font-weight: 600;
		font-display: swap;
		src: url('/fonts/archivo-semibold.woff2') format('woff2');
	}

	@font-face {
		font-family: 'Archivo Black';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('/fonts/archivo-black.woff2') format('woff2');
	}

	html, body {
		font-family: 'Archivo', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
